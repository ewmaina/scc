#!/bin/sh


[ -f     .scc ]  && .     .scc
[ -f   ~/.scc ]  && .   ~/.scc
[ -f /etc/scc ]  && . /etc/scc

prg=/tmp/$USER-scc
src=$prg.cc

echo '
	#include <simple.h>
	int main() {
' 		>  $src


echo "$@" | sed 's/\(.*[;}]\)*\([^;}]\+$\)/\1 cout << ( \2 );/' >> $src


echo '
	; cout << endl;
} ' 		>>  $src
#cat $src

#LIBS=-lm 
#set -x
g++  -Wall -std=gnu++0x  -ggdb3 -O0 -I/home/lvv/p/scc/ -I/usr/local/include/  $prg.cc -o $prg $LIBS && $prg
# vim:set ts=4 sw=4 syntax=sh:   
