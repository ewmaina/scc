#!/bin/sh 

time (

echo =====================================================================================================

echo ---------------------------------------------------------
echo 'scc 1' 
      scc 1  &&
echo  1

echo ---------------------------------------------------------	PRINTER
echo "scc 'vector<int> V{1,2}; V'"
      scc 'vector<int> V{1,2}; V'  &&
echo -e "{1, 2}"

echo ---------------------------------------------------------	PRINTER
echo "scc 'int A[2] = {1,2}; A'"
      scc 'int A[2] = {1,2}; A'  &&
echo -e "{1, 2}"

#echo ---------------------------------------------------------
#echo "echo -e '1 2\n11 22\n111 222'    | scc -p 'F(1)=9;'"
